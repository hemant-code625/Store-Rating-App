generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id              BigInt   @id @default(autoincrement())
  name            String
  email           String   @unique
  password        String
  address         String?
  role            Role     @default(USER)
  ratingsGiven    Rating[] @relation("UserRatings")
  ratingsReceived Rating[] @relation("StoreRatings")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Rating {
  id        BigInt   @id @default(autoincrement())
  user      User     @relation("UserRatings", fields: [userId], references: [id])
  userId    BigInt
  store     User     @relation("StoreRatings", fields: [storeId], references: [id])
  storeId   BigInt
  rating    Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, storeId])
}

enum Role {
  ADMIN
  USER
  OWNER
}
